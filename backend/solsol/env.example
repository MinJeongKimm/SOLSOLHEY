###############################################
# SOLSOLHEY Backend .env Template
# 복사 경로: backend/.env (루트 backend)
# 프로필은 local 또는 dev 중 선택합니다.
###############################################

###############################################
# Spring Profile
# - local: H2 로컬 개발용 (DB 설정 불필요)
# - dev  : PostgreSQL 개발/공용 DB 사용
###############################################
SPRING_PROFILES_ACTIVE=local

###############################################
# Database (dev: PostgreSQL)
# - 아래 둘 중 하나만 사용
#   1) SPRING_DATASOURCE_URL (권장)
#   2) DB_HOST/PORT/NAME/USER/PASSWORD (application.yml에서 조합)
###############################################
# SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/solsol_dev?sslmode=require
# SPRING_DATASOURCE_USERNAME=solsol
# SPRING_DATASOURCE_PASSWORD=solsol123

# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=solsol_dev
# DB_USER=solsol
# DB_PASSWORD=solsol123

###############################################
# JWT (인증)
# - 256비트(Base64) 랜덤 시크릿 키 필수
# - 기본 만료시간은 application.yml 사용 (필요시 아래로 오버라이드)
###############################################
JWT_SECRET_KEY=REPLACE_WITH_BASE64_256BIT_SECRET
# JWT_ACCESS_MINUTES=15
# JWT_REFRESH_DAYS=14

###############################################
# 외부 금융 API
###############################################
FINANCE_API_KEY=REPLACE_WITH_YOUR_KEY
FINANCE_API_BASE_URL=https://finopenapi.ssafy.io/ssafy/api/v1/edu
FINANCE_API_MEMBER_BASE_URL=https://finopenapi.ssafy.io/ssafy/api/v1
FINANCE_API_TIMEOUT=10

###############################################
# CORS
# - 실제 사용 도메인만 허용 (예: FE 로컬/배포 도메인)
###############################################
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
# CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
# CORS_ALLOWED_HEADERS=*
# CORS_ALLOW_CREDENTIALS=true
# CORS_MAX_AGE=3600

###############################################
# Flyway/JPA/SQL 초기화
###############################################
SPRING_FLYWAY_OUT_OF_ORDER=false
SPRING_SQL_INIT_MODE=never
JPA_HIBERNATE_DDL_AUTO=update

###############################################
# Rate Limiting
###############################################
RATE_LIMIT_ENABLED=true
RATE_LIMIT_GENERAL_REQUESTS_PER_MINUTE=100
RATE_LIMIT_LOGIN_ATTEMPTS_PER_15MIN=10
RATE_LIMIT_CLEANUP_INTERVAL_HOURS=1

###############################################
# Server (선택)
###############################################
# SERVER_PORT=8080
# SERVER_TOMCAT_URI_ENCODING=UTF-8
# SERVER_TOMCAT_CONNECTION_TIMEOUT=20000
# SERVER_TOMCAT_RELAXED_QUERY_CHARS="|,{,},[,],\\"
# SERVER_TOMCAT_RELAXED_PATH_CHARS="|,{,},[,],\\"
# SERVER_SERVLET_ENCODING_CHARSET=UTF-8
# SERVER_SERVLET_ENCODING_FORCE=true
# SERVER_SERVLET_ENCODING_ENABLED=true

###############################################
# (선택) 기타
###############################################
# LOGGING_LEVEL_ROOT=INFO
# LOGGING_LEVEL_COM_SOLSOLHEY=DEBUG
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

###############################################
# (선택) pgAdmin 웹 관리툴 계정
# docker-compose.dev.yml 사용 시, 아래 값을 .env에 설정하면 자동 적용됩니다.
###############################################
